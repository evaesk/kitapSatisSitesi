@using odev_05.Entity
@model IEnumerable<product>

    <h3>Popüler Ürünler</h3>
<ul class="nav nav-list promowrapper">
    @foreach (var item in Model)
    {
        <li>
            <div class="thumbnail">
               
                <img src="~/Content/Image/@item.Image" alt="bootstrap ecommerce templates">
                <div class="caption">
                    <h4><a class="defaultBtn" href="/home/ProductDetails/@item.Id">Görüntüle</a> <span class="pull-right">@item.Price (₺) </span></h4>
                </div>
            </div>
        </li>
        <li style="border:0"> &nbsp;</li>
    }

    
</ul>
