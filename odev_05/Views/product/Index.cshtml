@model IEnumerable<odev_05.Entity.product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content">
    <div class="row">
        <div class="col-xs-12">


            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Ürün Listesi</h3>
                </div><!-- /.box-header -->
                <br />
                <a class="btn btn-primary btn-block" href="@Url.Action("Create")">Yeni Ürün Ekleme</a>
                <br />
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Ürün Görseli</th>
                                <th>Ürün Adı</th>
                                <th>Ürün Yazarı</th>
                                <th>Ürün Fiyatı</th>
                                <th>Çevirmen</th>
                                <th>Son Basım Tarihi</th>
                                <th>Sayfa Sayısı</th>
                                <th>Onay durumu</th>
                                <th>Anasayfa</th>
                                <th>Popülerlik Durumu</th>
                                <th>Kategori Adı</th>
                                
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td><img src="~/Content/Image/@item.Image" width="80" height="60" />"</td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    @item.Author
                                </td>
                                <td>
                                    @item.Translater
                                </td>
                                <td>
                                    @item.Date
                                </td>
                                <td>
                                    @item.Page
                                </td>
                                <td>
                                    @if (item.IsApproved)
                                    {
                                        <label class="label label-success">Evet</label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger">Hayır</label>
                                    }
                                </td>
                                <td>
                                    @if (item.IsHome)
                                    {
                                        <label class="label label-success">Evet</label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger">Hayır</label>
                                    }
                                </td>
                                <td>
                                    @if (item.IsFeatured)
                                    {
                                        <label class="label label-success">Evet</label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger">Hayır</label>
                                    }
                                </td>
                                <td>
                                    @item.Category.Name
                                </td>
                                <td>
                                    <a class="btn btn-primary" href="@Url.Action("Edit", new { id=item.Id })"><i class="fa fa-fw fa-edit"></i>Düzenle</a>
                                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id=item.Id })"><i class="fa fa-fw fa-trash-o"></i>Sil</a>
                                </td>



                            </tr>
                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Ürün Görseli</th>
                                <th>Ürün Adı</th>
                                <th>Ürün Fiyatı</th>
                                <th>Ürün Yazarı</th>
                                <th>Çevirmen</th>
                                <th>Son Basım Tarihi</th>
                                <th>Sayfa Sayısı</th>
                                <th>Onay durumu</th>
                                <th>Anasayfa</th>
                                <th>Popülerlik Durumu</th>
                                <th>Kategori Adı</th>

                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->

